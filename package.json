{
  "name": "eang",
  "version": "0.0.0-development",
  "description": "eang - reactive angular framework",
  "author": "Sebastian Kropp <sebastian@kropponline.de>",
  "repository": {
    "type": "git",
    "url": "https://github.com/eascientific/eang.git"
  },
  "bugs": {
    "url": "https://github.com/eascientific/eang/issues"
  },
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "scripts": {
    "format": "prettier --write src/**/*.{ts,json,js}",
    "lint": "tslint -p src -t codeframe && tslint -p playground -t codeframe",
    "commit": "git-cz",
    "build": "npm run build:next && npm run build:umd && npm run copy && npm run css:all",
    "css:all": "postcss themes/*.css -d dist/css",
    "css:playground": "postcss playground/styles.css -d playground/dist/css",
    "css:mode": "postcss themes/all.css themes/mode.css themes/mode.css themes/mode/**/*.css -o playground/dist/mode.css",
    "css:material": "postcss themes/*.css -d playground/dist",
    "build:next": "ngc -p src && rollup -c",
    "build:nextngc": "ngc -p src",
    "build:nextrollup": "rollup -c",
    "build:umd": "npm run build:umdngc && npm run build:umdrollup",
    "build:umdngc": "ngc -p src --target es5 --sourcemap",
    "build:umdrollup": "rollup -c -o dist/eang.umd.js -f umd -n eang --sourcemap",
    "copy": "cpx \"build/**/*.{json,ts}\" dist && cpx src/package.json dist && cpx \"themes/**/*\" dist/themes && cpx README.md dist ",
    "clean": "rimraf dist build playground/dist",
    "build:watch": "concurrently \"cpx themes/**/* dist/themes -w\" \"npm run build:umdngc -- -w\" \"npm run build:umdrollup -- -w\" \"npm run build:nextngc -- -w\" \"npm run build:nextrollup -- -w\"",
    "playground": "npm run build && concurrently \"cpx \"playground/app/**/*.{html,css}\" playground/dist/app -w\" \"npm run css:all -- -w\" \"npm run css:playground -- -w\" \"npm run build:umdngc -- -w\" \"npm run build:umdrollup -- -w\" \"tsc -p playground -w\" \"browser-sync start --config bs-config.js\"",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -x @commitlint/config-conventional -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint -p src -t codeFrame",
      "git add"
    ],
    "playground/**/*.ts": [
      "tslint -p playground -t codeFrame",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm"
    ],
    "prepare": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      }
    ]
  },
  "devDependencies": {
    "@angular/common": "^6.0.7",
    "@angular/compiler": "^6.0.7",
    "@angular/compiler-cli": "^6.0.7",
    "@angular/core": "^6.0.7",
    "@angular/forms": "^6.0.7",
    "@angular/platform-browser": "^6.0.7",
    "@angular/platform-browser-dynamic": "^6.0.7",
    "@angular/router": "^6.0.7",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@semantic-release/git": "^6.0.1",
    "browser-sync": "^2.24.5",
    "codelyzer": "^4.4.2",
    "concurrently": "^3.6.0",
    "connect-history-api-fallback": "^1.5.0",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.2.0",
    "postcss": "^6.0.23",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-nested": "^3.0.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rxjs": "^6.2.1",
    "rxjs-compat": "^6.2.1",
    "semantic-release": "^15.6.3",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended": "^2.1.0",
    "systemjs": "^0.21.4",
    "travis-deploy-once": "^5.0.1",
    "tslint": "^5.10.0",
    "typescript": "~2.7.2",
    "zone.js": "^0.8.26"
  },
  "dependencies": {
    "commitizen": "^2.10.1"
  }
}
